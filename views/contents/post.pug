      .articles
        .row
          .col-md-10.col-md-offset-2
            - var  monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
            each post in posts
              article.post
                .post__info
                  time.post__date(datetime='2014-08-03', pubdate='')
                    p.post__month= monthNames[post.date.getMonth()]
                    p.post__day= post.date.getDate()
                    p.post__year= post.date.getFullYear()
                  .post__comments
                    p 12
                    p comments
                  .post__links.hidden-sm.hidden-xs
                    .tag
                      p.tag__title Categories:
                      p.tag__body Essays, Writings
                    .tag
                      p.tag__title Tegs:
                      p.tag__body Essays, Writings
                    .social
                      span.social__title Share:
                      a.social__link.social__link--pn(href='#')
                        i.fa.fa-pinterest(aria-hidden='true')
                      a.social__link.social__link--tw(href='#')
                        i.fa.fa-twitter(aria-hidden='true')
                      a.social__link.social__link--fb(href='#')
                        i.fa.fa-facebook(aria-hidden='true')
                .post__image
                  img(src='/uploads/' + post.image, alt='')
                .post__author
                  | Posted by
                  strong= post.author
                h4.post__title= post.title
                .post__descr= post.description

