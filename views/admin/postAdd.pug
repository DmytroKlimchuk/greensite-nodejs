main.register-wrapper
  .container-fluid.container-fluid--ligtgreen.headline
    .container
      .row
        p.page-title Додати новий пост
  .container-fluid
    .container
      .row
        .col-xs-12.col-md-6.col-md-offset-3
          .register.list-block.list-block--green
            .list-block__head
              p.list-block__title Додати пост
              button.close
                i.fa.fa-times
            .list-block__body
              .box
                - if (errors)
                    each error in errors
                      .alert.alert-danger= error

                - if (success)
                    .alert.alert-success= success
                    br
                    .form-group
                    .row
                      .col-xs-5.col-sm-6
                        a.forgot-link(href='/admin/add') Додати інший пост

              - if (!success)
                  form(action='/admin/add', method='post', enctype="multipart/form-data")
                    .form-group
                      input(type='text', name='title', placeholder='Назва' )
                    .form-group
                      input(type='file', name='image', placeholder='Картинка' )
                    .form-group
                      textarea(name='description')
                    .form-group.align-right
                      button.submit(type='submit', name='send') Додати

